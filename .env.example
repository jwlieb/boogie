# Embeddings Provider Configuration
# Supported: openai (default)
EMBEDDINGS_PROVIDER=openai

# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Dimension (default: 384)
# Must match the dimension expected by boogie-vec backend
VECTOR_DIM=384

# Boogie-Vec Backend URL (default: http://127.0.0.1:8080)
BOOGIE_VEC_URL=http://127.0.0.1:8080

# Auto-load index into boogie-vec backend after seeding (default: true)
# Set to 'false' to skip auto-loading
AUTO_LOAD_INDEX=true
